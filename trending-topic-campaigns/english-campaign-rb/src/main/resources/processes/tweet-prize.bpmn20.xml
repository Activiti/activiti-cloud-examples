<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath"
             targetNamespace="http://www.activiti.org/processdef"
             xmlns:activiti="http://activiti.org/bpmn">

  <process id="tweet-prize" name="tweet-prize">


    <startEvent id="start"/>
    <sequenceFlow id="flow1" sourceRef="start" targetRef="serviceTaskRank"/>

    <serviceTask id="serviceTaskRank" name="Get Ranking for Authors" implementation="Get Top Authors Ranked"/>

    <sequenceFlow id="flow2" sourceRef="serviceTaskRank" targetRef="serviceTaskTweet"/>


    <serviceTask id="serviceTaskTweet" name="Tweet Winners" implementation="SendRewardToWinners">
      <multiInstanceLoopCharacteristics isSequential="false" activiti:collection="${top}" activiti:elementVariable="winner">
      </multiInstanceLoopCharacteristics>
    </serviceTask>

    <sequenceFlow id="flow4" sourceRef="serviceTaskTweet" targetRef="end"/>

    <endEvent name="Tweet Ranks were published" id="end"/>



  </process>

</definitions>